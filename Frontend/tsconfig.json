{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2017"],
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "newLine": "LF"
    },
    "include": [
        "*.ts",
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}